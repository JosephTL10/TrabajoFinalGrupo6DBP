@model TrabajoFinalGrupo6DBP.Models.Especialidad

@{
    ViewData["Title"] = "Editar Especialidad";
}

@section Styles {
    <link rel="stylesheet" href="~/css/EditarMedico.css" />
}

<div class="container-editar">
    <h2>Editar Especialidad</h2>

    <div class="alert alert-warning">
        <p>
            ⚠️ Solo puede editar la <strong>descripción</strong> de la especialidad.
            <br />El nombre y el estado no pueden modificarse.
        </p>
    </div>

    <form asp-action="EditarEspecialidad" method="post">
        <!-- ID oculto -->
        <input type="hidden" name="id" value="@Model.Id_Especialidad" />

        <div class="form-group">
            <label>Nombre</label>
            <input class="form-control" value="@Model.Nombre_Especialidad" disabled />
        </div>

        <div class="form-group">
            <label>Descripción</label>
            <textarea name="descripcion" class="form-control">@Model.Descripcion</textarea>
        </div>

        <div class="form-group">
            <label>Estado</label>
            <input class="form-control" value="@(Model.Estado_Especialidad ? "Activo" : "Inactivo")" disabled />
        </div>

        <div class="botones">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="ListaEspecialidades" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
