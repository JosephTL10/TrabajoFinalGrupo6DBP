@model TrabajoFinalGrupo6DBP.Models.HorarioMedico

@{
    ViewData["Title"] = "Registrar Horario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/RegistrarHorarioMedico.css" />
}

<div class="container-horario">
    <h2>Registrar Horario de Médico</h2>

    <form asp-action="RegistrarHorarioMedico" method="post">
        <div class="mb-3">
            <label>Médico</label>
            <select asp-for="MedicoId" asp-items="ViewBag.Medicos" class="form-control"></select>
        </div>

        <div class="mb-3">
            <label>Día de la semana</label>
            <select asp-for="DiaSemana" class="form-control">
                <option value="Lunes">Lunes</option>
                <option value="Martes">Martes</option>
                <option value="Miércoles">Miércoles</option>
                <option value="Jueves">Jueves</option>
                <option value="Viernes">Viernes</option>
                <option value="Sábado">Sábado</option>
                <option value="Domingo">Domingo</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Hora de inicio</label>
            <input asp-for="Hora_Inicio" type="time" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Hora de fin</label>
            <input asp-for="Hora_Fin" type="time" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="ListaHorariosMedicos" class="btn btn-secondary">Volver</a>
    </form>
</div>
