@model TrabajoFinalGrupo6DBP.Models.HorarioMedico

@{
    ViewData["Title"] = "Editar Horario Médico";
}

@section Styles {
    <link rel="stylesheet" href="~/css/EditarHorarioMedico.css" />
}

<div class="editar-horario-card">
    <h2>Editar Horario del Médico</h2>

    <form asp-action="EditarHorarioMedico" method="post">
        <input type="hidden" asp-for="Id_Horario" />
        <input type="hidden" asp-for="MedicoId" />

        <div class="form-group mb-3">
            <label><strong>Médico:</strong></label>
            <p class="form-control-plaintext">@Model.Medico?.Nombre_Completo_Medico</p>
        </div>

        <div class="form-group mb-3">
            <label for="DiaSemana">Día de la Semana</label>
            <select asp-for="DiaSemana" class="form-select" required>
                <option value="">Seleccione un día</option>
                <option>Lunes</option>
                <option>Martes</option>
                <option>Miércoles</option>
                <option>Jueves</option>
                <option>Viernes</option>
                <option>Sábado</option>
                <option>Domingo</option>
            </select>
            <span asp-validation-for="DiaSemana" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Hora_Inicio">Hora de Inicio</label>
            <input asp-for="Hora_Inicio" type="time" class="form-control" required />
            <span asp-validation-for="Hora_Inicio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Hora_Fin">Hora de Fin</label>
            <input asp-for="Hora_Fin" type="time" class="form-control" required />
            <span asp-validation-for="Hora_Fin" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-4">Guardar Cambios</button>
            <a asp-action="DetalleMedico" asp-controller="Medicos" asp-route-id="@Model.MedicoId" class="btn btn-secondary px-4 ms-2">Volver</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
