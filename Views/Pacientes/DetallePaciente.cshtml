@model TrabajoFinalGrupo6DBP.Models.Paciente

@{
    ViewData["Title"] = "Detalle del Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/DetalleMedico.css" />
}


<div class="container-detalle">
    <h2>Detalle del Paciente</h2>

    <div class="card">
        <div class="card-body">
            <h4>@Model.Nombre_Completo_Paciente</h4>
            <p><strong>DNI:</strong> @Model.DNI_Paciente</p>
            <p><strong>Fecha de Nacimiento:</strong> @Model.Fecha_Nacimiento_Paciente.ToString("dd/MM/yyyy")</p>
            <p><strong>Teléfono:</strong> @Model.Telefono_Paciente</p>
            <p><strong>Correo Electrónico:</strong> @Model.Correo_Paciente</p>
            <p><strong>Contraseña:</strong> @Model.Contrasenia_Paciente</p>
            <p><strong>Dirección:</strong> @Model.Direccion_Paciente</p>
        </div>
    </div>

    <h4>Citas Médicas</h4>

    @if (Model.CitasMedicas != null && Model.CitasMedicas.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Especialidad</th>
                    <th>Medico</th>
                    <th>Observaciones</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cita in Model.CitasMedicas.OrderBy(c => c.Fecha_CitaMedica))
            {
                <tr>
                    <td>@cita.Fecha_CitaMedica.ToString("dd/MM/yyyy")</td>
                    <td>@cita.Hora_CitaMedica</td>
                    <td>@cita.Medico?.Especialidad?.Nombre_Especialidad</td>
                    <td>@cita.Medico?.Nombre_Completo_Medico</td>

                    <td>@cita.Observaciones</td>
                    <td>@cita.Estado_CitaMedica</td>
                    
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Este paciente no tiene citas médicas registradas.</p>
    }

    <div class="mt-3">
        <a asp-controller="CitasMedicas" asp-action="RegistrarCitaPaciente" asp-route-pacienteId="@Model.DNI_Paciente" class="btn btn-primary">Agregar Cita Médica</a>
        <a asp-action="ListaPacientes" class="btn btn-secondary">Volver</a>
    </div>
</div>
