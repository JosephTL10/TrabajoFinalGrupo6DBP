@model TrabajoFinalGrupo6DBP.Models.Paciente

@{
    ViewData["Title"] = "Editar Registro del Paciente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/EditarRegistroPaciente.css" />
}

<div class="container-editar">
    <h2>Editar Registro del Paciente</h2>

    <form asp-action="EditarRegistroPaciente" method="post" class="form-editar">
        <input type="hidden" asp-for="Id_Paciente" />

        <div class="form-group">
            <label asp-for="DNI_Paciente">DNI</label>
            <input asp-for="DNI_Paciente" class="form-control" />
            <span asp-validation-for="DNI_Paciente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre_Completo_Paciente">Nombre Completo</label>
            <input asp-for="Nombre_Completo_Paciente" class="form-control" />
            <span asp-validation-for="Nombre_Completo_Paciente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha_Nacimiento_Paciente">Fecha de Nacimiento</label>
            <input asp-for="Fecha_Nacimiento_Paciente" type="date" class="form-control" />
            <span asp-validation-for="Fecha_Nacimiento_Paciente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefono_Paciente">Teléfono</label>
            <input asp-for="Telefono_Paciente" class="form-control" />
            <span asp-validation-for="Telefono_Paciente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Direccion_Paciente">Dirección</label>
            <input asp-for="Direccion_Paciente" class="form-control" />
            <span asp-validation-for="Direccion_Paciente" class="text-danger"></span>
        </div>

        <div class="botones">
            <button type="submit" class="btn btn-guardar">Guardar Cambios</button>
            <a asp-action="ListaPacientes" class="btn btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
