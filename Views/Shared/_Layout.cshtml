<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de atención del Hospital Arzobispo Loayza</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Actividad3Grupo6DBP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Inicio"><i class="bi bi-hospital-fill me-2"></i>Hospital Arzobispo Loayza</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area="" asp-controller="Pacientes" asp-action="ListaPacientes">
                                <span class="material-symbols-outlined">
                                    patient_list
                                </span>
                                <span>Lista de Pacientes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area="" asp-controller="Pacientes" asp-action="RegistrarPaciente">
                                
                                <span class="material-symbols-outlined">
                                    person_add
                                </span>
                                <span>Registrar paciente</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area="" asp-controller="CitasMedicas" asp-action="RegistrarCitaPaciente">
                                <span class="material-symbols-outlined">clinical_notes</span>
                                <span>Registrar Cita Médica</span>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area="" asp-controller="CitasMedicas" asp-action="ListaCitasMedicas">
                                <span class="material-symbols-outlined">
                                    patient_list
                                </span>
                                <span>Lista de Citas Médicas</span>
                            </a>
                        </li>




                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" asp-area="" asp-controller="Reporte" asp-action="GenerarReporte">
                                <span class="material-symbols-outlined">data_table</span>
                                <span>Generar Reporte</span>
                            </a>
                        </li>
<!-- 

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" type="button" asp-area="" asp-controller="Home" asp-action="Registro">
                                <span class="material-symbols-outlined">person</span>
                                <span>Registro</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" type="button" asp-area="" asp-controller="Home" asp-action="Login">
                                <span class="material-symbols-outlined">login</span>
                                <span>Iniciar sesión</span>
                            </a>
                        </li>

-->

                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex flex-column align-items-center" type="button" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="material-symbols-outlined">
                                logout
                            </span>
                            <span> Cerrar sesión </span>
                            </a>
                        </li>

                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
<df-messenger
  intent="WELCOME"
  chat-title="Hospital_Bot"
  agent-id="819c18ad-e321-42e5-8d2d-649629ac6940"
  language-code="es"
></df-messenger>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    <div class="footer-container">
        &copy; 2025 - Sistema de atención del Hospital Arzobispo Loayza. Todos los derechos reservados.<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
