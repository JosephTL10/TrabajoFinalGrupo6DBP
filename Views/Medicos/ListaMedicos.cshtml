@{
    ViewData["Title"] = "Lista de Médicos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ListaMedicos.css" />
}

<div class="medicos-card">
    <h2>Lista de Médicos</h2>

    <a asp-action="RegistrarMedico" class="btn-registrar">Registrar nuevo médico</a>

    <div class="tabla-container">
        <table class="tabla-medicos">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>DNI</th>
                    <th>Especialidad</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Nombre_Completo_Medico</td>
                        <td>@m.DNI_Medico</td>
                        <td>@m.Especialidad</td>
                        <td>@m.Telefono_Medico</td>
                        <td>@m.Correo_Medico</td>
                        <td>
                            @if (m.Estado_Medico)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="DetalleMedico" asp-route-id="@m.Id_Medico" class="btn btn-info">Ver</a>
                            <a asp-action="EditarMedico" asp-route-id="@m.Id_Medico" class="btn btn-warning">Editar</a>
                            <a asp-action="EliminarMedico" asp-route-id="@m.Id_Medico" class="btn btn-danger">Eliminar</a>
                            <form asp-action="CambiarEstado" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@m.Id_Medico" />
                                <button type="submit" class="btn @(m.Estado_Medico ? "btn-secondary" : "btn-success")">
                                    @(m.Estado_Medico ? "Desactivar" : "Activar")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
